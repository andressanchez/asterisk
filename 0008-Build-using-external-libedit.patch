index 2966532..883ccc1 100644
--- a/makeopts.in
+++ b/makeopts.in
@@ -197,3 +197,6 @@ TERMCAP_DIR=@TERMCAP_DIR@
 TINFO_INCLUDE=@TINFO_INCLUDE@
